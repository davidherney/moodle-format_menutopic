{{!
    @template format_menutopic/header

    Menu item tree.

    Example context (json):
    {
        "uniqid": "course-1",
        "title": "Course 1",
        "initialsection": {
        },
        "hasformatmsgs": "true",
        "formatmsgs": [{
            "message": "This course uses the menu topic format."
        }],
        "hidemenubar": "false",
        "format": "menutopic",
        "templatetopic": "true",
        "withicons": "true",
        "hasmenu": "true",
        "menuinfo": {
            "withstyles": "true",
            "menuposition": "center",
            "menuitems": []
        },
        "csstemplate": "",
        "isediting": false
    }
}}

{{#csstemplate}}
    <style type="text/css">
        {{{csstemplate}}}
    </style>
{{/csstemplate}}

<div id="{{uniqid}}-course-format-header">
    <h2 class="accesshide">{{{title}}}</h2>

    {{#hasformatmsgs}}
        {{#formatmsgs}}
            {{>core/notification_info}}
        {{/formatmsgs}}
    {{/hasformatmsgs}}

    {{#initialsection}}
    <div class="single-section general-section">
        <ul class="{{format}}">
            {{$ format_menutopic/local/content/section }}
                {{> format_menutopic/local/content/section }}
            {{/ format_menutopic/local/content/section }}
        </ul>
    </div>
    {{/initialsection}}

    <div id="menu-tree-start" class="{{#hasmenu}}hasmenu{{/hasmenu}}">
        {{#hasmenu}}
            {{#hidemenubar}}
                {{#isediting}}
                    <div class="alert alert-warning">
                        {{#str}} hiddenmenubar, format_menutopic {{/str}}
                    </div>
                    <div class="menu-wrapper">
                        {{#menuinfo}}
                            {{>format_menutopic/courseformat/menu}}
                        {{/menuinfo}}
                    </div>
                {{/isediting}}
            {{/hidemenubar}}
            {{^hidemenubar}}
                <div class="menu-wrapper">
                    {{#menuinfo}}
                        {{>format_menutopic/courseformat/menu}}
                    {{/menuinfo}}
                </div>
            {{/hidemenubar}}
        {{/hasmenu}}
    </div>
</div>
